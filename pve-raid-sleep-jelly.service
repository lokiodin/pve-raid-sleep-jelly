[Unit]
Description=Power down RAID disks and shutdown Truenas SCALE VM if no user is connected to Jellyfin server.

[Service]
EnvironmentFile=/etc/pve-raid-sleep-jelly.conf
Environment=PYTHONUNBUFFERED=1

ExecStart=/usr/local/sbin/pve-raid-sleep-jelly --timeout $TIME $DISKS
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target
